<!DOCTYPE html>
<html lang="en">
      
    <%- include('./partials/head.ejs'); -%>
    
<body>

    <header class="flex-vertical">
        <div class="dentro-header">
            <img class="logo" src="/images/logo-prueba-prueba.png" alt="logo">
            
            <div class="nav-bar">
                <nav><!--nav> style="justify-content: space-around;"> -->
                    <% if ( locals && locals.usuarioLogueado != undefined ) { %>
                        <% if ( usuarioLogueado.perfil != 'Administrador' ) { %>
                            <!-- if NO SOY admin, muestro el menú de público -->
                            <ul type="none">
                            <!--el views de linea hogar cambiarlo por el de categoria cuando se tenga listo su html-->
                            <li><a href="/">Home</a></li>
                            <li><a href="#">Promociones</a></li>
                            <li><a href="#">Ofertas</a></li>
                            <li><a href="#">Ayuda</a></li>
                            </ul>
                            <br><br><br>
                        <% } else { %>
                            <!-- else soy admin, muestro el menú protegido de ABM de productos -->
                            <ul type="none">
                                <li><a href="/productos/productoAgregar">Productos - Agregar</a></li>
                                <li><a href="/productos/productoModificar">Productos - Modificar</a></li>
                                <li><a href="/productos/productoDelete">Productos - Eliminar</a></li> 
                            </ul>
                        <% } %>    
                    <% } %>                      
                </nav>
            </div>
            
            <div class="login-registro">
                <a href="/usuarios/login">Logging</a>    
                <a href="/usuarios/logout">Salir</a>   
                <a href="/usuarios/registro">Registrate</a>
                <a href="/productos/carrito">Mi Carrito<i class="fas fa-cart-plus"></i></a>
                <% if ( locals && locals.usuarioLogueado != undefined ) { %>
                    <strong><%= locals.usuarioLogueado.usuario %></strong>
                <% } %>
            </div>

        </div>

        <div class="menu-burger">
            <i class="fas fa-bars"></i>
        </div>

        <div class="buscador">
            <input class="buscador-input" type= "Buscar" placeholder="Que producto buscas?"></input>
            <button type="submit" ><i class="fas fa-search"></i></button>
        </div>
        
    </header> 
    
    <main class="flex-vertical">
        
        <div class="flex-Horizontal"> <!--cambie flex-vertical por horizontal, luego adaptamos-->
            <!---------------OFERTAS------------------->
            <div class=etiqueta-oferta>
                <p class="titulo-ofertas">Ofertas especiales</p>
                
            </div>

            <section class="Ofertas">
                <div class="productos">
                
                    <% for(let i = 0; (listadoOfertas.length - i) > 0; i++) { %>

                        <article>
                            <!-- <a href="/productos/detalle/<% listadoOfertas[i].idPrd %>"><img src=<%= listadoOfertas[i].foto %> alt=""></a> -->
                            <a href="/productos/detalle/<%= listadoOfertas[i].idPrd %>"><img src=<%= listadoOfertas[i].foto %> alt=""></a>
                            <div class="contenedor1">
                                <i class="fas fa-cart-plus"></i></i>
                                <p class="precios"><%= listadoOfertas[i].precio %></p>
                                <p class="descuentos"><%= listadoOfertas[i].bonif %></p>
                                <p class="descripciones"><%= listadoOfertas[i].desc %></p>
                            </div>
                        </article>

                    <% } %>

                </div>
            </section>
            <!-------------------Fin seccion scrollable de Ofertas----------------->
            
            <!---------------Seccion scrollable de promociones---Esta seccion la cambie por especial de abejas.---------------->
            
            <!--ETIQUETA ESPECIAL DE ABEJAS-->
            <div class=Etiqueta-Especial-Abejas>
              <p class="titulo-Especial-abejas">Especial de Abejas</p>
            </div>
            
            
            <!-----ABEJAS---->

            <section class="abejas">
                <div class="productos-abejas">
                   
                    <% for(let i = 0; (listado.length - i) > 0; i++) { %>

                        <article>
                            <!-- <a href="/productos/detalle"><img src=<%= listado[i].foto %> alt=""></a> -->
                            <a href="/productos/detalle/<%= listado[i].idPrd %>"><img src=<%= listado[i].foto %> alt=""></a>
                            <div class="contenedor1">
                                <i class="fas fa-cart-plus"></i></i>
                                <p class="precios"><%= listado[i].precio %></p>
                                <p class="descuentos"><%= listado[i].bonif %></p>
                                <p class="descripciones"><%= listado[i].desc %></p>
                            </div>
                        </article>

                    <% } %>    
                    
                </div>    
                    
            
            </section>
        </div>
    </main>
    
    <%- include( './partials/footer.ejs' ); -%>

</body>
</html>